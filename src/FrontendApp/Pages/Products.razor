@page "/products"
@inject IProductService ProductService

<PageTitle>Products - Microservices Dashboard</PageTitle>

<h1>Products</h1>

<div class="mb-3">
    <button class="btn btn-success" @onclick="ShowAddForm">+ Add Product</button>
    <button class="btn btn-secondary ms-2" @onclick="LoadProducts">Refresh</button>
</div>

@if (showForm)
{
    <div class="card mb-4">
        <div class="card-header">
            @(editingProduct == null ? "Add New Product" : "Edit Product")
        </div>
        <div class="card-body">
            <EditForm Model="@formModel" OnValidSubmit="SaveProduct">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <InputText class="form-control" @bind-Value="formModel.Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <InputNumber class="form-control" @bind-Value="formModel.Price" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Stock</label>
                    <InputNumber class="form-control" @bind-Value="formModel.Stock" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary ms-2" @onclick="CancelEdit">Cancel</button>
            </EditForm>
        </div>
    </div>
}

@if (loading)
{
    <p>Loading products...</p>
}
else if (error != null)
{
    <div class="alert alert-danger">@error</div>
}
else if (products.Count == 0)
{
    <p>No products found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Stock</td>
                    <td>
                        <button class="btn btn-sm btn-primary" @onclick="() => EditProduct(product)">Edit</button>
                        <button class="btn btn-sm btn-danger ms-1" @onclick="() => DeleteProduct(product.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (message != null)
{
    <div class="alert alert-info mt-3">@message</div>
}

@code {
    private List<Product> products = new();
    private bool loading = true;
    private string? error;
    private string? message;
    private bool showForm = false;
    private Product? editingProduct;
    private CreateProductRequest formModel = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        loading = true;
        error = null;
        try
        {
            products = await ProductService.GetProductsAsync();
        }
        catch (Exception ex)
        {
            error = $"Failed to load products: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowAddForm()
    {
        editingProduct = null;
        formModel = new CreateProductRequest();
        showForm = true;
        message = null;
    }

    private void EditProduct(Product product)
    {
        editingProduct = product;
        formModel = new CreateProductRequest
        {
            Name = product.Name,
            Price = product.Price,
            Stock = product.Stock
        };
        showForm = true;
        message = null;
    }

    private void CancelEdit()
    {
        showForm = false;
        editingProduct = null;
        formModel = new();
    }

    private async Task SaveProduct()
    {
        message = null;
        try
        {
            if (editingProduct == null)
            {
                var created = await ProductService.CreateProductAsync(formModel);
                if (created != null)
                {
                    message = $"Product '{created.Name}' created successfully!";
                }
            }
            else
            {
                var updated = await ProductService.UpdateProductAsync(editingProduct.Id, formModel);
                if (updated != null)
                {
                    message = $"Product '{updated.Name}' updated successfully!";
                }
            }
            showForm = false;
            await LoadProducts();
        }
        catch (Exception ex)
        {
            error = $"Failed to save product: {ex.Message}";
        }
    }

    private async Task DeleteProduct(int id)
    {
        message = null;
        var success = await ProductService.DeleteProductAsync(id);
        if (success)
        {
            message = "Product deleted successfully!";
            await LoadProducts();
        }
        else
        {
            error = "Failed to delete product.";
        }
    }
}
